@model _3101_tarea1_mvc.Models.MatriculaDetalleModel

@{
    ViewData["Title"] = "Gesti√≥n de Matricula";
}

<h1>Agregar curso</h1>
@if (ViewBag.mensaje != null)
{
    <h4>@ViewBag.mensaje</h4>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoCurso" class="control-label"></label>
                <input asp-for="CodigoCurso" class="form-control" />
                <span asp-validation-for="CodigoCurso" class="text-danger"></span>
                @Html.HiddenFor(m => m.IdMatricula)
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
