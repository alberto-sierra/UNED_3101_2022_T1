@model _3101_tarea1_mvc.Models.MatriculaModel

@{
    ViewData["Title"] = "Gestión de Matricula";
}

<h1>Detalle de matricula</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdEstudianteValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEstudianteValue)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreEstudiante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreEstudiante)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Código de Materia
            </th>
            <th>
                Nombre de la Materia
            </th>
            <th>
                Precio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MatriculaDetalles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCursoNavigation.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCursoNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCursoNavigation.Precio)
                </td>
            </tr>
        }
    <tr></tr>
    <tr>
        <td></td>
        <td><strong>Total:</strong></td>
        <td><strong>@Html.DisplayFor(model => model.Total)</strong></td>
    </tr>
    </tbody>
</table>

<div>
    <a asp-action="Index">Regresar</a>
</div>
